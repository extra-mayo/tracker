{
  "manifest_version": 2,

  "name": "tracker",
  "description": "Keeps track of shows",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/Beyonce-50.png",
    "default_popup": "popup.html",
    "default_title": "Track shows"
  },
  "icons": {
    "128": "img/tv-128.png"
  },

  "options_page": "options.html",
  "permissions": [
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
